<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.organization.OrganizationCreatePostThirdFragment">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginVertical="5dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="13dp"
            android:orientation="horizontal">



            <ImageButton
                android:id="@+id/backButtonThirdStep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:padding="6dp"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/icon_back"
                android:layout_column="2"
                />




            <TextView
                android:id="@+id/NextTvSecondStepSecond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:text="Next"
                android:textColor="#0488B4"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGrayWatan">

        </View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/NextTvSecondStepSecond5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Event Date"
                    android:textAlignment="center"
                    android:textColor="#0488B4"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/selectDateBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:layout_marginTop="10dp"
                    android:text="Select Date"
                    android:layout_gravity="center_horizontal"

                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/showDateDataTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="#545454"
                    android:textSize="14dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"

                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/NextTvSecondStepSecond4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Start Time"

                            android:textAlignment="center"
                            android:textColor="#0488B4"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/selectStartTimeBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:textSize="10sp"
                            android:layout_gravity="center_horizontal"
                            android:text="Select Time"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/showStartTimeDataTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="#545454"
                            android:textSize="14dp"
                            />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/NextTvSecondStepSecond3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="End Time"

                            android:textAlignment="center"
                            android:textColor="#0488B4"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/selectEndTimeBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:layout_marginTop="10dp"
                            android:text="Select Time"
                            android:layout_gravity="center_horizontal"

                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/showEndTimeDataTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="#545454"
                            android:textSize="14dp"
                             />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </LinearLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout

            android:layout_width="300dp"
            android:layout_height="50dp"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:android="http://schemas.android.com/apk/res/android"

            android:layout_marginBottom="15dp"
            tools:context=".MainActivity">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"

                android:hint="#HashTags"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
                <AutoCompleteTextView
                    android:layout_height="50dp"
                    android:id="@+id/autocomplete_Tv"
                    android:layout_width="match_parent"
                    android:paddingTop="7dp"
                    android:paddingLeft="50dp"
                    android:inputType="none"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <LinearLayout
            android:id="@+id/hashtags_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:animateLayoutChanges="true"/>



        <TextView
            android:id="@+id/selected_hashtags_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginTop="10dp" />




    </LinearLayout>





</FrameLayout>