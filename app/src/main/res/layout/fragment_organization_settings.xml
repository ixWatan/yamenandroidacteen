<!-- fragment_activist_settings.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">



    <!-- Edit Profile -->
    <TextView
        android:id="@+id/textViewEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textSize="16sp"
        android:padding="16dp"
        android:textColor="@android:color/black"
        android:drawableEnd="@drawable/icon_edit"/>

    <!-- Sign Out -->
    <TextView
        android:id="@+id/textViewSignOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:textSize="16sp"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:layout_below="@id/textViewEditProfile"
        android:background="@color/red"
        android:drawableEnd="@drawable/icon_exit"/>

    <TextView
        android:id="@+id/textViewSignOut2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Org"
        android:textSize="16sp"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:layout_below="@id/textViewSignOut"
        android:background="@color/gray"
  />

</RelativeLayout>
