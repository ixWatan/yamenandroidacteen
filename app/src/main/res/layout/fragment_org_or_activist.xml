<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".auth.OrgOrActivistFragment">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are You..."
            android:textColor="@color/black"
            android:textSize="29sp"
            android:textStyle="bold"
            android:layout_marginTop="0dp" />

        <ImageView
            android:layout_marginTop="30dp"
            android:id="@+id/imageViewAct"
            android:layout_width="250px"
            android:layout_height="250px"
            app:srcCompat="@drawable/activist_logo" />

        <Button
            android:id="@+id/button1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:onClick="goToSignUp"
            android:text="A Teen Activist"
            android:textColor="@color/black" />



        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or"
            android:textColor="@color/black"
            android:textSize="29sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp" />

        <ImageView
            android:id="@+id/imageViewOrg"
            android:layout_marginTop="40dp"
            android:layout_width="250px"
            android:layout_height="250px"
            app:srcCompat="@drawable/organization_logo" />

        <Button
            android:id="@+id/button2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:onClick="SignUpOrganizationActivity"
            android:text="An Organization"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/doaccounthave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Do you have an account? "
                android:paddingBottom="20dp"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/gotologin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/goto_login"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>



    </LinearLayout>


</FrameLayout>